{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Primarie",
    "description": "Reprezentarea unei primarii.",
    "type": "object",
    "additionalProperties": false,
    "required": ["nume", "adresa", "contact"],
    "properties": {
        "nume": {
            "description": "Denumirea primariei.",
            "type": "string"
        },
        "adresa": {
            "description": "Adresa primariei.",
            "$ref": "#/definitions/adresa"
        },
        "contact": {
            "description": "Modalitati de contact.",
            "$ref": "#/definitions/contact"
        }
    },
    "definitions": {
        "teritoriu": {
            "type": "object",
            "required": ["nume", "siruta"],
            "properties": {
                "nume": {
                    "type": "string"
                },
                "siruta": {
                    "type": "integer",
                    "pattern": "^[0-9]{6}$"
                }
            }
        },
        "adresa": {
            "type": "object",
            "required": ["localitate", "judet", "cod-postal", "tara"],
            "properties": {
                "strada": {
                    "description": "",
                    "type": "string"
                },
                "localitate": {
                    "$ref": "#/definitions/teritoriu"
                },
                "judet": {
                    "$ref": "#/definitions/teritoriu"
                },
                "cod-postal": {
                    "description": "",
                    "type": "string",
                    "pattern": "^[0-9]{6}$"
                },
                "tara": {
                    "description": "",
                    "type": "string"
                }
            }
        },
        "contact": {
            "type": "object",
            "required": ["telefon"],
            "properties": {
                "telefon": {
                    "description": "Numar de telefon.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "format": "^[0-9]{3,4}-[0-9]{6,7}$"
                    }
                },
                "fax": {
                    "description": "Numar de FAX.",
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "type": "string",
                        "pattern": "^[0-9]{3,4}-[0-9]{6,7}$"
                    }
                }
            }
        }
    }
}